{
    "$schema": "http://json.schemastore.org/tsconfig",
    "extends": "../tsconfigbase",
    "compilerOptions": {
      "target": "es6",
      "module": "es6",
      "lib": ["dom", "es6"],
      "jsx": "react-jsx",
      "outDir": "ts-build/",
      "sourceMap": true,
      "esModuleInterop": true
    },
    "include": ["src/**/*"],
    // See https://github.com/webpack/webpack-cli/issues/2458#issuecomment-846635277
    "ts-node": {
      "compilerOptions": { "module": "commonjs" }
    }
  }